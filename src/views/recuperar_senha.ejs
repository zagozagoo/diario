        href="https://cdn-assets-eu.frontify.com/s3/frontify-enterprise-files-eu/eyJwYXRoIjoiYm9zY2hcL2ZpbGVcLzJGdzFKM1pWQmQ1OHh2YmVxVnpNLnBuZyJ9:bosch:nU4nNMJlDJCRLZwO0TbWBWDxqrnKWRRfXXDdV2hqsKo?width={width}"
        type="image/x-icon">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
