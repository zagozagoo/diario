    <link rel="stylesheet" href="css/login.css">
    <script defer src="../../public/js/recuperar_senha.js"></script>

</head>

<body>
    <main>
        <div class="login-wrap">
            <h2>Recuperar senha</h2>

            <div class="form">
                <form action="/recuperar_senha" method="post">
                    <input type="text" placeholder="EDV ou Turma" name="usuario" id="usuario" />
                    <input type="password" placeholder="Digite a nova senha" name="senha1" id="senha1" />
                    <input type="password" placeholder="Digite novamente" name="senha2" id="senha2" />
                    <input type="hidden" name="resposta" id="resposta">
                    <button type="submit" id="botao" onclick="veirificaSenha()"> Alterar </button>
                </form>
            </div>
            <% if (typeof error !="undefined" ) { %>
                <%= error %>
                    <% } %>
        </div>
    </main>
</body>

</html>