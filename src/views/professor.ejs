        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="../css/disciplina.css" />
    <script src="../../public/js/script.js"></script>

</head>

<body>
    <header>
        <nav class="shadow-lg navbar navbar-expand-lg top">
            <div class="container-fluid">
                <a class="navbar-brand" href="/"><strong class="RGB_Controle">Di√°rio de Bordo</strong></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <strong>Cadastrar: </strong>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/cadastro_curso">Curso</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/cadastro_turma">Turma</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/cadastro_professor">Professor</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/cadastro_disciplina">Disciplina</a>
                    </li>
                </ul>
            </div>
        </nav>

    </header>
    <main>
        <button onclick="toggleDarkMode()" class="toggle-button">Alternar Modo</button>

        <div class="card">
            <h2>Cadastrar um novo professor</h2>
            <form action="/cadastro_professor" method="post" class="card-body">
                <div class="input-group mb-3">
                    <div class="divisao">
                        <label for="professor">Nome</label>
                        <input type="text" class="form-control" name="professor" aria-label="Sizing example input"
                            aria-describedby="inputGroup-sizing-default">
                    </div>
                    <div class="divisao">
                        <select name="instituicao">
                            <option value="Bosch">Bosch</option>
                            <option value="Senai" selected>Senai</option>
                        </select>
                    </div>

                    <div class="divisao">
                        <input class="btn btn-primary" type="submit" name="submit" id="submit" value="Cadastrar"
                        style="background-color: rgb(75, 153, 243);">
                    </div>
                </div>
            </form>
        </div>
    </main>
</body>

