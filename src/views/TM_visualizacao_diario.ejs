        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/style.css">
    
    <script>
        function toggleDarkMode() {
            const body = document.body;
            body.classList.toggle('dark-mode');
        }
    </script>
   
</head>

<body>
    <header>
        <nav class="shadow-lg navbar navbar-expand-lg top position-fixed w-100">
            <div class="container-fluid">
                <a class="navbar-brand" href=""><strong class="RGB_Controle">Diário de Bordo</strong></a>
                <!-- <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button> -->
            </div>
        </nav>
    </header>
    <main>
        <div class="item">
            <table class="table table-hover">
                <thead>
                    <tr>
                    <td>Data</td>
                    <td>Disciplina</td>
                    <td>Professor</td>
                    <td>Turma</td>
                </tr>
                </thead>
            <% diarios.forEach(diario=> { %>
                    <div class="d-flex justify-content-center flex-wrap gap-5">
                        <tbody>   
                                <td><p><%= new Date(diario.Data).toLocaleDateString('pt-BR'); %></p></td>
                                <td><p><%= disciplinas.filter(x=> x.IDDisciplina == diario.IDDisciplina)[0].Nome %></p></td>
                                <td><p><%= professores.filter(x=> x.IDProfessor == diario.IDProfessor)[0].Nome %></p></td>
                                <td><p><%= turmas.filter(x=> x.IDTurma == diario.IDTurma)[0].Nome %></p></td>
                        </tbody></a>
                    </div>
                <% }); %>
            </table>
        </div>
        <div class="descricao">
            <% diarios.forEach(diario=> { %>
                <p><%= diario.Descricao %></p>
            <% }); %>
        </div>
    </main>
</body>

</html>